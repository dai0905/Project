@model Project.Data.TaiKhoan

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Tài khoản</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="TaiKhoans" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaTaiKhoan" class="control-label"></label>
                <input asp-for="MaTaiKhoan" class="form-control" />
